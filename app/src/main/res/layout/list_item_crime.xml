<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_crime_solved_check_box"
        android:padding="4dp"
        android:layout_above="@+id/list_item_crime_date_text_view"
        android:layout_alignRight="@+id/list_item_crime_title_text_view"
        android:layout_alignEnd="@+id/list_item_crime_title_text_view" />

    <ImageView
        android:id="@+id/list_item_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:cropToPadding="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_crime_title_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        android:textSize="15pt"
        android:text="Crime title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_photo"
        android:layout_toEndOf="@+id/list_item_photo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_crime_date_text_view"
        android:padding="4dp"
        android:text="Crime date"
        android:textSize="12pt"
        android:layout_toEndOf="@+id/list_item_photo"
        android:layout_below="@+id/list_item_crime_title_text_view"
        android:layout_toRightOf="@+id/list_item_photo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/textView" />

</RelativeLayout>